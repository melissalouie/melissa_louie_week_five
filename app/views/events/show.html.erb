<div class="container">
  <div class="page-header">
    <%= link_to 'Edit', edit_location_event_path(@location, @event), class: "btn btn-info pull-right" %>
    <%= link_to 'Delete', location_event_path(@location, @event), method: :delete, class: "btn btn-danger pull-right" %>
    <h1><%= @event.description %></h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="col-md-6">Name</th>
        <th class="col-md-offset-8 col-md-2">Date</th>
        <th class="col-md-offset-10 col-md-2">Requires ID?</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="col-md-6"><%= @event.description %></td>
        <td class="col-md-offset-8 col-md-2"><%= @event.date %></td>
        <% if @event.requires_id == true %>
          <td class="col-md-offset-10 col-md-2">Yes</td>
        <% else %>
          <td class="col-md-offset-10 col-md-2">No</td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
