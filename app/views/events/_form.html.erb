<%= form_for [@location, @event] do |f| %>
  <div class="form-group row">
    <%= f.label :description, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :date, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.date_field :date, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :requires_id, 'Requires ID?', class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <% if @event.requires_id == true %>
        <%= f.check_box :requires_id, { checked: 'checked' } %>
      <% else %>
        <%= f.check_box :requires_id, { checked: 'true' } %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="form-controls  col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-info"%>
    </div>
  </div>
<% end %>
