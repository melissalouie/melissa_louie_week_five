<%= form_for(@location) do |f| %>
<div class="form-group row">
  <%= f.label :name, class: "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :address, class: "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :zip_code, class: "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.number_field :zip_code, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="form-controls col-md-offset-2 col-md-4">
    <%= f.submit class: "btn btn-info" %>
  </div>
</div>
<% end %>
