<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'All Locations', locations_path, class: "btn btn-info" %>
      <%= link_to 'Add Event', new_location_event_path(@location), class: "btn btn-info" %>
    </div>
    <h1><%= @location.name %></h1>
  </div>
  <div class="page-header">
    <h2>Events</h2>
  </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="col-md-6">Description</th>
          <th class="col-md-offset-6 col-md-2">Date</th>
          <th class="col-md-offset-8 col-md-2">Requires ID?</th>
          <th class="col-md-offset-10 col-md-1"></th>
          <th class="col-md-offset-11 col-md-1"></th>
        </tr>
      </thead>
      <tbody>
        <% @location.events.each do |event| %>
          <% if event.requires_id == true %>
            <tr>
              <td class="col-md-4"><%= link_to event.description, location_event_path(@location, event) %></td>
              <td class="col-md-offset-6 col-md-2"><%= event.date %></td>
              <td class="col-md-offset-8 col-md-2">Yes</td>
              <td class="col-md-offset-10 col-md-1"><%= link_to 'Edit', edit_location_event_path(@location, event), class: "btn btn-info" %></td>
              <td class="col-md-offset-11 col-md-1"><%= link_to 'Delete', location_event_path(@location, event), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% else %>
            <tr>
              <td class="col-md-4"><%= link_to event.description, location_event_path(@location, event) %></td>
              <td class="col-md-offset-6 col-md-2"><%= event.date %></td>
              <td class="col-md-offset-8 col-md-2">No</td>
              <td class="col-md-offset-10 col-md-1"><%= link_to 'Edit', edit_location_event_path(@location, event), class: "btn btn-info" %></td>
              <td class="col-md-offset-11 col-md-1"><%= link_to 'Delete', location_event_path(@location, event), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
