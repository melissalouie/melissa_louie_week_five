<div class="container">
  <div class="page-header">
    <h1>All Locations</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th colspan="3"><h2>Name</h2></th>
        <th colspan="3"><h2>Address</h2></th>
        <th colspan="3"><h2>Zip Code</h2></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
      <tr>
        <td colspan="3"><%= link_to location.name, location_path(location) %></td>
        <td colspan="3"><%= location.address %></td>
        <td colspan="3"><%= location.zip_code %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
