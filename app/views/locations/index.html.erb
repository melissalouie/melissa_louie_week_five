<div class="container">
  <div class="page-header">
    <%= link_to 'New Location', new_location_path, class: "btn btn-info pull-right" %>
    <h1>All Locations</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th colspan="2"><h2>Name</h2></th>
        <th colspan="2"><h2>Address</h2></th>
        <th colspan="2"><h2>Zip Code</h2></th>
        <th colspan="2"></th>
        <th colspan="2"></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
      <tr>
        <td colspan="2"><%= link_to location.name, location_path(location) %></td>
        <td colspan="2"><%= location.address %></td>
        <td colspan="2"><%= location.zip_code %></td>
        <td colspan="2"><%= link_to 'Delete', location_path(location), method: :delete %></td>
        <td colspan="2"><%= link_to 'Edit', edit_location_path(location) %></td>
        <td colspan="2"><%= link_to 'Add Event', new_location_event_path(location) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
